<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="user"
            type="com.example.domain.model.User"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}"
        app:cardBackgroundColor="#E6E6E6"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:padding="@dimen/padding"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/img_gender"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:profileImage="@{user.picture.large}"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="26dp" />
            <LinearLayout
                android:layout_marginLeft="@dimen/margin"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.name.first}"
                        android:textSize="@dimen/text_title_size"
                        style="@style/TitleText"
                        tools:layout_editor_absoluteX="217dp"
                        tools:layout_editor_absoluteY="26dp" />

                    <TextView
                        android:layout_marginLeft="@dimen/margin"
                        android:id="@+id/last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.name.last}"
                        android:textSize="@dimen/text_title_size"
                        style="@style/TitleText"
                        tools:layout_editor_absoluteX="324dp"
                        tools:layout_editor_absoluteY="26dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="@dimen/margin"
                        android:id="@+id/loc"
                        android:layout_width="@dimen/image_logo"
                        android:layout_height="@dimen/image_logo"
                        tools:layout_editor_absoluteX="155dp"
                        tools:layout_editor_absoluteY="61dp"
                        android:src="@drawable/localisation"/>

                    <LinearLayout
                        android:layout_margin="@dimen/margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/location_street_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{user.location.street.name}"
                            android:textSize="@dimen/text_size"
                            style="@style/NormalText"
                            tools:layout_editor_absoluteX="324dp"
                            tools:layout_editor_absoluteY="61dp" />
                        <LinearLayout
                            android:layout_marginTop="@dimen/margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/location_city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{user.location.city}"
                                android:textSize="@dimen/text_size"
                                style="@style/NormalText"
                                tools:layout_editor_absoluteX="217dp"
                                tools:layout_editor_absoluteY="61dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" , "
                                android:textSize="@dimen/text_size"
                                style="@style/NormalText"
                                tools:layout_editor_absoluteX="217dp"
                                tools:layout_editor_absoluteY="61dp" />

                            <TextView
                                android:id="@+id/location_country"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size"
                                style="@style/NormalText"
                                android:text="@{user.location.country}"
                                tools:layout_editor_absoluteX="217dp"
                                tools:layout_editor_absoluteY="88dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="@dimen/margin"
                        android:id="@+id/img_mail"
                        android:layout_width="@dimen/image_logo"
                        android:layout_height="@dimen/image_logo"
                        tools:layout_editor_absoluteX="153dp"
                        tools:layout_editor_absoluteY="116dp"
                        android:src="@drawable/email" />
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{user.email}"
                        android:textSize="@dimen/text_size"
                        style="@style/NormalText"
                        tools:layout_editor_absoluteX="217dp"
                        tools:layout_editor_absoluteY="116dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="@dimen/margin"
                        android:id="@+id/imageView6"
                        android:layout_width="@dimen/image_logo"
                        android:layout_height="@dimen/image_logo"
                        tools:layout_editor_absoluteX="153dp"
                        tools:layout_editor_absoluteY="144dp"
                        android:src="@drawable/phone" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        style="@style/NormalText"
                        android:text="@{user.phone}"
                        tools:layout_editor_absoluteX="217dp"
                        tools:layout_editor_absoluteY="144dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>

